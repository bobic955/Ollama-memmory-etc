from memory_handler import MemoryHandler  # âœ… fixed import

def main():
    memory = MemoryHandler("memory.json")

    # Load personality
    personality = memory.get_personality()
    print("âœ… Personality loaded:", personality)

    # Add a memory
    memory.add_memory("Jarvis started up successfully.")

    print("\nðŸ§  Recent Memories:")
    for mem in memory.get_memories():
